extends layout

block content
 div(align="center").container
  h1 Your Price:
  form(name='myform', action='/laptops', method='POST')
   input(id="price",name="price",type="text")
   hr
   h3 Monitor Size
   input(type="radio",name="screenSize", value="11",checked) 
   | 11 Inches - Included
   br
   input(type="radio",name="screenSize", value="15")
   | 15 Inches - $200
   br
   hr
   h3 HardDrive Size
   input(type="radio",name="hardDrive", value="128GB",checked) 
   | 128GB - Included
   br
   input(type="radio",name="hardDrive", value="256GB")
   | 256GB - $200
   br
   hr
   h3 Ram
   input(type="radio",name="ram", value="8GB",checked) 
   | 8GB - Included
   br
   input(type="radio",name="ram", value="16GB")
   | 16GB - $200
   br
   hr
   button(id="save",type='button').btn.btn-primary Save to Cart
   button(id="clear",type='button').btn.btn-primary Clear Price
   br
   br
   div(align='center')
   a(href='/saved') Click Here To Check Saved Laptop Price 
   br
